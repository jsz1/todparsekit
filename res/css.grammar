hexcolor    (workOnHexcolor:)    = '#'Num;
expr        (workOnExpr:)        = hexcolor | QuotedString | 'bold' | 'normal' | 'italic';
property    (workOnProperty:)    = 'color' | 'background-color' | 'font-weight' | 'font-style' | 'font-family' | 'font-size';
decl        (workOnDecl:)        = property ':' expr;
semiDecl    (workOnSemiDecl:)    = ';' decl?;
actualDecls (workOnActualDecls:) = decl semiDecl*;
decls       (workOnDecls:)       = Empty | actualDecls;
selector    (workOnSelector:)    = LowercaseWord;
rules       (workOnRules:)       = selector '{' decls '}';
start       (workOnStart:)       = rules*;